<Page x:Class="SmModManager.Graphics.PgAdvanced"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <TabControl>
        <TabItem Header="Settings">
            <DockPanel>
                <Grid DockPanel.Dock="Bottom">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="1" Content="Reset" Margin="0,5,5,5" Height="30" Click="ResetSettings"/>
                    <Button Grid.Column="2" Content="Save" Margin="5,5,5,5" Height="30" Click="SaveSettings"/>
                </Grid>
                <StackPanel Margin="0,0,5,0">
                    <DockPanel Margin="10,10,10,0">
                        <Label Content="Game Data Path" Margin="0,0,10,0" Width="100"/>
                        <Button DockPanel.Dock="Right" Content="Browse" Margin="10,0,0,0" Width="100" Click="BrowseGameDataPath"/>
                        <TextBox x:Name="GameDataPathBox" VerticalContentAlignment="Center" IsReadOnly="True"/>
                    </DockPanel>
                    <DockPanel Margin="10,10,10,0">
                        <Label Content="User Data Path" Margin="0,0,10,0" Width="100"/>
                        <ComboBox x:Name="UserDataPathBox" VerticalContentAlignment="Center"/>
                    </DockPanel>
                </StackPanel>
            </DockPanel>
        </TabItem>
    </TabControl>
</Page>