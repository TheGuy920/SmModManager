<Page x:Class="SmModManager.Graphics.PgManage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:bindings="clr-namespace:SmModManager.Core.Bindings">
    <TabControl>
        <TabItem Header="Compatible Mods">
            <DockPanel>
                <StackPanel Width="150" Margin="0,0,0,10">
                    <Button Content="Inject" Margin="10,10,10,0" Height="30" Click="InjectMod"/>
                    <Button Content="Archive" Margin="10,10,10,0" Height="30" Click="ArchiveMod"/>
                </StackPanel>
                <ListView x:Name="CompatibleModsList" Margin="0,10,10,10">
                    <ListView.ItemTemplate>
                        <DataTemplate DataType="bindings:ModItemBinding">
                            <DockPanel>
                                <Image Source="{Binding Preview}" Stretch="UniformToFill" Width="100" Height="100" Margin="0,0,10,0"/>
                                <Label Content="{Binding Name}"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                            </DockPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>
        </TabItem>
        <TabItem Header="All Mods">
            <ListView x:Name="AllModsList" Margin="10,10,10,10">
                <ListView.ItemTemplate>
                    <DataTemplate DataType="bindings:ModItemBinding">
                        <DockPanel>
                            <Image Source="{Binding Preview}" Stretch="UniformToFill" Width="100" Height="100" Margin="0,0,10,0"/>
                            <Label Content="{Binding Name}"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                        </DockPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </TabItem>
        <TabItem Header="Current Mods">
            <ListView x:Name="CurrentModList" Margin="10,10,10,10">
                <ListView.ItemTemplate>
                    <DataTemplate DataType="bindings:ModItemBinding">
                        <DockPanel>
                            <Image Source="{Binding Preview}" Stretch="UniformToFill" Width="100" Height="100" Margin="0,0,10,0"/>
                            <Label Content="{Binding Name}"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                        </DockPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </TabItem>
    </TabControl>
</Page>