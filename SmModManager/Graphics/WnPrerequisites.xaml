<Window x:Class="SmModManager.Graphics.WnPrerequisites"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mod Manager Prerequisites" Width="400" Height="250" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Height="50">
            <Button DockPanel.Dock="Right" Content="Continue" Margin="0,10,10,10" Width="75" Click="Continue"/>
            <Button DockPanel.Dock="Right" Content="Cancel" Margin="0,10,10,10" Width="75" Click="Cancel"/>
            <Label Content="This is required for proper usage!" Margin="10,10,10,10" VerticalContentAlignment="Center"/>
        </DockPanel>
        <StackPanel Margin="0,0,5,0">
            <DockPanel Margin="10,10,10,0">
                <Label Content="Game Data Path" Margin="0,0,10,0" Width="100"/>
                <Button DockPanel.Dock="Right" Content="Browse" Margin="10,0,0,0" Width="75" Click="Browse"/>
                <TextBox x:Name="GameDataPathBox" VerticalContentAlignment="Center" IsReadOnly="True"/>
            </DockPanel>
            <DockPanel Margin="10,10,10,0">
                <Label Content="User Data Path" Margin="0,0,10,0" Width="100"/>
                <ComboBox x:Name="UserDataPathBox" VerticalContentAlignment="Center"/>
            </DockPanel>
        </StackPanel>
    </DockPanel>
</Window>